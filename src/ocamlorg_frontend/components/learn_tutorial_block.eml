let tutorial_block_content 
~title
~heading
~description
~(tutorial_links:string list)
~see_more
= 
    <div class="w-80">
        <div class="my-2 text-white text-sm text-left font-medium leading-10 tracking-widest"> <%s title %> </div>
        <h2 class="my-2 text-white text-2xl text-left font-normal leading-10"> <%s heading %> </h2>
        <div class="my-2 h-16 text-white text-left text-md font-normal leading-7"> <%s description %> </div>

        <ul class="flex flex-col items-center">
            <% tutorial_links |> List.iter (fun link -> %>
                <li class="m-2 p-2 h-12 w-full  bg-default rounded-md text-center md:w-80">
                    <a href="" class="w-44 h-11 text-primary-700 text-md font-bold leading-10">
                        <%s link  %>
                    </a>
                </li>
            <% ); %>
        </ul>  

        <a href="" class="w-80 my-4 text-white text-md font-bold inline-flex items-center underline leading-10"> 
            <%s see_more %>
            <%s! Icons.arrow_small_right "h-5 w-5 ml-4" %>
        </a>
    </div>

let left_tutorial_block 
~title
~heading
~description
~(tutorial_links:string list)
~see_more
= 
    <div class="container w-1/2 h-[36rem] ">
        <div class="flex flex-col justify-end bg-tutorial-block p-4">
            <%s! tutorial_block_content ~title ~heading ~description ~tutorial_links ~see_more %>
        </div>
    </div>

let right_tutorial_block
~title
~heading
~description
~(tutorial_links:string list)
~see_more
= 
    <div class="container w-1/2 h-[36rem]">
        <div class="flex flex-col bg-blue-700 p-4 pr-8 justify-start">
            <%s! tutorial_block_content ~title ~heading ~description ~tutorial_links ~see_more %>
        </div>
    </div>