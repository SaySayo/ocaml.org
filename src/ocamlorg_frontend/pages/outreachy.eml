let render (metadata : Ood.Outreachy.t list)
= 
Layout.render
~title:"OCaml Outreachy Internships"
~description:"Records Of OCaml Community Past Outreachy Internship Projects"
~canonical:Url.outreachy @@
<div class="intro-section-simple">
    <div class="container-fluid">
        <div class="text-center w-full lg:w-2/3 m-auto">
            <h1 class="font-bold mb-6">OCaml Outreachy Internships</h1>
            <p>This is record of all past OCaml Community Outreachy Internship Projects.</p>
        </div>
    </div>
</div>

<div class="container mx-auto px-4 flex items-center">
    <div class="">
        <% metadata |> List.iter (fun (rounds : Ood.Outreachy.t) -> %>
        <div class="">
            <div id="name" class="block  border-b border-[#EF8316] p-6 text-left my-2">
                <h2 class="font-bold"><%s rounds.name %></h2>
            </div>
            <div class="flex flex-wrap flex-col md:flex-row">
                <% rounds.projects |> List.iter (fun (project : Ood.Outreachy.project) -> %>
                    <div class="w-full md:w-1/3 p-6">
                        <div id="projects" class="rounded-2xl items-center max-w-sm border border-gray-300 m-6 transition ease-in-out hover:scale-110">
                            <div class="p-6 flex flex-col space-y-2">                 
                                <h1 class="text-lg text-black font-semibold"><%s project.title %></h1>
                                <p >Mentee: <span class='text-gray-800 italic'><%s project.mentee %></span></p>
                                <p>Mentor(s): <span class='text-gray-800 italic'><%s Fmt.(str "%a" (list ~sep:comma string) project.mentors) %></></p>
                                <div class='flex flex-row items-center space-x-2 text-[#EF8316] font-semibold'>
                                <% (match project.blog with None -> () | Some blog -> %>
                                <div class"flex-wrap">                        
                                <a href="<%s blog %>" target="_blank">Blog</a> 
                                </div>
                                <% ); %>
                                <% (match project.video with None -> () | Some video -> %>
                                <div>                        
                                <a href="<%s video %>" target="_blank">Video</a> 
                                </div>
                                <% ); %>
                                <p>
                                    <a href="<%s project.source %>" target="_blank">Source</a> 
                                </p> 
                                <p class='flex-grow'></p>
                                <p>
                                    <a href='#'>See more</a>
                                </p>
                                </div>   
                            </div>
                        </div>
                    </div>
                <% ); %>
            </div>
            <br>
        </div>   
        <% ); %>
    </div>
</div>